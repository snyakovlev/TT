<?xml version="1.0" encoding="utf-8"?>
<ru.mobileup.channelone.tv1player.widget.AdVideoControlsView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ad_video_controls"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/ad_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <Button
        android:id="@+id/skip_button"
        style="@style/AdvertButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="75dp"
        android:text="@string/video_skip_button_text"
        android:visibility="visible" />

    <ImageButton
        android:id="@+id/close_button"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:background="@drawable/translucent_black_button_selector"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="24dp"
        android:padding="8dp"
        android:src="@drawable/ic_close_white_24dp"
        android:visibility="visible" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/click_through_button"
        style="@style/AdvertButton"
        android:layout_marginTop="58dp"
        android:layout_centerHorizontal="true"
        android:text="@string/video_click_through_button"
        android:textAllCaps="false"
        android:visibility="gone" />

    <TextView
        android:id="@+id/skip_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="75dp"
        android:background="@drawable/translucent_black_button_selector"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:text="@string/video_skip_label"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/ad_seek_bar_panel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@color/video_shadow">

        <CheckBox
            android:id="@+id/mute_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:background="@color/transparent"
            android:button="@drawable/volume_button"
            android:checked="false" />

        <TextView
            android:id="@+id/advert_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/mute_button"
            android:paddingTop="8dp"
            android:text="@string/video_advert_label"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/advert_label"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/advert_label"
            android:text="00:00"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <SeekBar
            android:id="@+id/seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:background="@null"
            android:clickable="false"
            android:maxHeight="@dimen/video_progress_height"
            android:minHeight="@dimen/video_progress_height"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:progressDrawable="@drawable/ad_seek_bar_progress"
            android:thumb="@null" />

    </RelativeLayout>

</ru.mobileup.channelone.tv1player.widget.AdVideoControlsView>