<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/translucent_primary_dark_50_percent"/>
            <size
                android:height="@dimen/video_thumb_size"
                android:width="@dimen/video_thumb_size"/>
        </shape>
    </item>

    <item
        android:bottom="10dp"
        android:top="10dp"
        android:left="10dp"
        android:right="10dp">
        <shape android:shape="oval">
            <solid android:color="@color/white"/>
            <size
                android:height="8dp"
                android:width="8dp"/>
        </shape>
    </item>

</layer-list>