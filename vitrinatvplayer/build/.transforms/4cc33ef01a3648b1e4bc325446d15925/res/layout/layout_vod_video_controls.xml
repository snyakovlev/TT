<?xml version="1.0" encoding="utf-8"?>
<ru.mobileup.channelone.tv1player.widget.VodVideoControlsView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vod_video_controls"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <ImageButton
        android:id="@+id/play_button"
        android:layout_width="@dimen/video_play_button_size"
        android:layout_height="@dimen/video_play_button_size"
        android:layout_centerInParent="true"
        android:background="@null"
        android:src="@drawable/ic_play_arrow_white_48dp" />

    <ImageButton
        android:id="@+id/pause_button"
        android:layout_width="@dimen/video_play_button_size"
        android:layout_height="@dimen/video_play_button_size"
        android:layout_centerInParent="true"
        android:background="@null"
        android:src="@drawable/ic_pause_white_48dp" />

    <LinearLayout
        android:id="@+id/seek_bar_panel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/video_panel_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shadow_bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <SeekBar
            android:id="@+id/seek_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:maxHeight="@dimen/video_progress_height"
            android:progressDrawable="@drawable/seek_bar_progress"
            android:thumb="@drawable/thumb"
            android:thumbOffset="@dimen/video_thumb_offset" />

        <TextView
            android:id="@+id/duration_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
        <ImageButton
            android:id="@+id/prevButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingLeft="16dp"
            android:paddingRight="12dp"
            android:src="@drawable/ic_skip_previous_white" />
        <ImageButton
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:src="@drawable/ic_skip_next_white" />
        <ImageButton
            android:id="@+id/qualityButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingLeft="12dp"
            android:paddingRight="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_settings" />

    </LinearLayout>

</ru.mobileup.channelone.tv1player.widget.VodVideoControlsView>