<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        android:background="@drawable/select">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/him"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/wimn"
                android:layout_height="@dimen/himn"
                android:background="@drawable/select"
                android:padding="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/delete" />

            <LinearLayout
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="#A9A9A9"
                android:orientation="horizontal"></LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/him"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_text_channel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="4dp"
                    android:layout_toLeftOf="@id/a1"
                    android:background="@drawable/select"
                    android:padding="2dp"
                    android:textSize="@dimen/text"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cur_progr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_text_channel"
                    android:layout_alignRight="@id/item_text_channel"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="8dp"
                    android:focusable="false"
                    android:lines="1"
                    android:maxLines="1"
                    android:textSize="@dimen/text_min" />

                <LinearLayout
                    android:id="@+id/a1"
                    android:layout_width="@dimen/wimn"
                    android:layout_height="@dimen/himn"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/select"
                            android:padding="2dp">

                            <ImageButton
                                android:id="@+id/programma"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:background="@drawable/select"
                                android:padding="2dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/prog2" />
                        </FrameLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/select"
                            android:padding="2dp">


                            <ImageButton
                                android:id="@+id/favorite"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:background="@drawable/select"
                                android:padding="2dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/star" />
                        </FrameLayout>

                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
